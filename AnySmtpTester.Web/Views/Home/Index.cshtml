@{
    ViewBag.Title = "AnySmtp Tester";
    Layout = "~/Views/Shared/_Blueprint.cshtml";
    
}

@section head{
    <script src="@Url.Content("~/Scripts/anysmtptester.main.js")" type="text/javascript"></script>
}
<h2>@ViewBag.Message</h2>
<p>
    Test Any SMTP Server with AnySmtp Tester.
</p>
<div class="span-24">
    <form id="anysmtptester">
    <div class="span-8">
        <fieldset id="fsSmtp">
            <legend>SMTP</legend>
            <div class="editor-label">
                <label for="txtHost">
                    Host:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtHost" class="text-box" type="text" />
            </div>
            <div class="editor-label">
                <label for="txtPort">
                    Port:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtPort" class="text-box" type="text" />
            </div>
            <div class="editor-field">
                <input id="chkIsSsl" type="checkbox" />
                <label for="chkIsSsl">
                    Enable SSL?
                </label>
            </div>
            <div class="editor-label">
                <label for="txtUser">
                    User:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtUser" class="text-box" type="text" />
            </div>
            <div class="editor-label">
                <label for="txtPassword">
                    Password:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtPassword" class="text-box" type="password" />
            </div>
        </fieldset>
    </div>
    <div class="span-16 last">
        <fieldset id="fsMail">
            <legend>Email</legend>
            <div class="editor-label">
                <label for="txtFrom">
                    From:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtFrom" class="text-box" type="text" />
            </div>
            <div class="editor-label">
                <label for="txtTo">
                    To:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtTo" class="text-box" type="text" />
                <span>(comma sepparated email addresses)</span>
            </div>
            <div class="editor-label">
                <label for="txtSubject">
                    Subject:
                </label>
            </div>
            <div class="editor-field">
                <input id="txtSubject" class="text-box" type="text" />
            </div>
            <div class="editor-label">
                <label for="txtMailBody">
                    Body:
                </label>
            </div>
            <div class="editor-field">
                <textarea class="text-box multi-line" id="txtMailBody"></textarea>
            </div>
        </fieldset>
    </div>
    <div id="testButton">
        TEST SMTP SERVER
    </div>
    <div class="span-24 last">
        <fieldset id="fsStatus">
            <legend>Server Status</legend>
            <div class="editor-label">
                <label for="txtServerStatus">
                    Status Message:
                </label>
            </div>
            <div class="editor-field">
                <textarea class="text-box multi-line" readonly="readonly" id="txtServerStatus">
$SMTP>> Console for SMTP Status:
.
                </textarea>
            </div>
        </fieldset>
    </div>
    </form>
</div>
